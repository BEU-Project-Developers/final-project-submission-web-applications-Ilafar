@model List<Pricing>
<!DOCTYPE html>
<html>
<head>
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }
    </style>
</head>
<body>

    <h2>Pricings list :</h2>
    <div>
        <a class="btn btn-primary" asp-action="create" asp-controller="pricing">
            Add new pricing
        </a>
    </div>
    <table>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Crud</th>
        </tr>
        @foreach (var pricing in Model)
        {
            <tr>
                <td>@pricing.Id</td>
                <td>@pricing.Name</td>
                <td>
                    <a class="btn btn-primary" asp-action="edit" asp-controller="pricing" asp-route-id="@pricing.Id">
                        Edit
                    </a>
                    <a class="btn btn-primary" asp-action="detail" asp-controller="pricing" asp-route-id="@pricing.Id">
                        Details
                    </a>
                    <a asp-action="delete" asp-controller="pricing" asp-route-id="@pricing.Id" class="btn btn-danger">
                        Delete
                    </a>
                </td>
            </tr>
        }


    </table>

</body>
</html>

