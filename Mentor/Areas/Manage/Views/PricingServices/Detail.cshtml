@using Mentor.ViewModels
@model PricingServiceDetailVM

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h4>Pricing Service Details</h4>
            <hr />
            <p><strong>Pricing ID:</strong> @Model.PricingId</p>
            <p><strong>Pricing Name:</strong> @Model.PricingName</p>

            <h5>Services:</h5>
            <ul>
                @foreach (var name in Model.ServiceNames)
                {
                    <li>@name</li>
                }
            </ul>
        </div>
    </div>
</div>
