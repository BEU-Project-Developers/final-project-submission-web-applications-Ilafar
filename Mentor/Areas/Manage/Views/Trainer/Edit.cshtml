@model Trainer

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Photo"></label>
                    <input asp-for="Photo" class="form-control">
                    <img style="width:150px;height=100px" id="PreviewImg" src="" alt="" />
                    <span class="text-danger" asp-validation-for="Photo"></span>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="FullName"></label>
                    <input asp-for="FullName" class="form-control">
                    <span class="text-danger" asp-validation-for="FullName"></span>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="Expertise"></label>
                    <input asp-for="Expertise" class="form-control">
                    <span class="text-danger" asp-validation-for="Expertise"></span>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="Bio"></label>
                    <input asp-for="Bio" class="form-control">
                    <span class="text-danger" asp-validation-for="Bio"></span>
                </div>
                <br />
                <button type="submit" class="btn btn-primary">Add</button>
            </form>
        </div>
    </div>
</div>