@model List<Trainer>
<!DOCTYPE html>
<html>
<head>
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }
    </style>
</head>
<body>

    <h2>Trainers list :</h2>
    <div>
        <a class="btn btn-primary" asp-action="create" asp-controller="trainer" >
            Add new trainer
        </a>
    </div>
    <table>
        <tr>
            <th>Id</th>
            <th>TrainerImage</th>
            <th>Fullname</th>
            <th>Crud</th>
        </tr>
        @foreach (var trainer in Model)
        {
            <tr>
                <td>@trainer.Id</td>
                <td> <img src="~/assets/img/team/@trainer.TrainerImage" style="width:100px;height:100px" class="img-fluid" alt=""></td>
                <td>@trainer.FullName</td>
                <td>
                    <a class="btn btn-primary" asp-action="edit" asp-controller="trainer" asp-route-id="@trainer.Id">
                        Edit
                    </a>
                    <a class="btn btn-primary" asp-action="detail" asp-controller="trainer" asp-route-id="@trainer.Id">
                        Details
                    </a>
                    <a asp-action="delete" asp-controller="trainer" asp-route-id="@trainer.Id" class="btn btn-danger">
                        Delete
                    </a>
                </td>
            </tr>
        }
       
        
    </table>

</body>
</html>

