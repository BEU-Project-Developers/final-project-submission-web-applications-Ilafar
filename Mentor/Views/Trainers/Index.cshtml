@model List<Trainer>

    <div class="page-title" data-aos="fade">
      <div class="heading">
        <div class="container">
          <div class="row d-flex justify-content-center text-center">
            <div class="col-lg-8">
              <h1>Trainers</h1>
              <p class="mb-0">Meet the experts behind your learning journey. Our trainers are experienced professionals and industry leaders who are passionate about teaching. They bring real-world knowledge into every course, ensuring you gain practical skills that matter. At Mentor, we believe great education starts with great educators.

</p>
            </div>
          </div>
        </div>
      </div>
      <nav class="breadcrumbs">
        <div class="container">
          <ol>
            <li><a href="index.html">Home</a></li>
            <li class="current">Trainers</li>
          </ol>
        </div>
      </nav>
    </div>

    <section id="trainers" class="section trainers">

      <div class="container">

        <div class="row gy-5">

            @foreach (var trainer in Model)
            {
                <div class="col-lg-4 col-md-6 member" data-aos="fade-up" data-aos-delay="100">
                    <div class="member-img">
                        <img src="~/assets/img/team/@trainer.TrainerImage" class="img-fluid" alt="">
                        <div class="social">
                                <a href="@trainer.TwitterUrl"><i class="bi bi-twitter-x"></i></a>
                                <a href="@trainer.FacebookUrl"><i class="bi bi-facebook"></i></a>
                                <a href="@trainer.InstagramUrl"><i class="bi bi-instagram"></i></a>
                                <a href="@trainer.LinkedinUrl"><i class="bi bi-linkedin"></i></a>
                        </div>
                    </div>
                    <div class="member-info text-center">
                        <h4>@trainer.FullName</h4>
                        <span>@trainer.Expertise</span>
                        <p>@trainer.Bio</p>
                    </div>
                </div>

            }


        </div>

      </div>

    </section>

