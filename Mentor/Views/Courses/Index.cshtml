@model List<Course>
    <div class="page-title" data-aos="fade">
      <div class="heading">
        <div class="container">
          <div class="row d-flex justify-content-center text-center">
            <div class="col-lg-8">
              <h1>Courses</h1>
              <p class="mb-0">Unlock your potential with expert-led online courses tailored to your goals. Whether you're just starting out or leveling up your skills, Mentor offers flexible, high-quality learning in tech, business, design, and more.</p>
            </div>
          </div>
        </div>
      </div>
      <nav class="breadcrumbs">
        <div class="container">
          <ol>
            <li><a href="index.html">Home</a></li>
            <li class="current">Courses</li>
          </ol>
        </div>
      </nav>
    </div>

    <section id="courses" class="courses section">

      <div class="container">

        <div class="row">

            @foreach (var course in Model)
            {
                <div class="col-lg-4 col-md-6 d-flex align-items-stretch" data-aos="zoom-in" data-aos-delay="100">
                    <div class="course-item">
                        <img src="~/assets/img/@course.Image" class="img-fluid" alt="...">
                        <div class="course-content">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <p class="category">@course.Category</p>
                                <p class="price">@course.Price</p>
                            </div>

                            <h3><a asp-controller="courses" asp-action="detail" asp-route-id="@course.Id">@course.Title</a></h3>
                            <p class="description">@course.Description</p>
                            <div class="trainer d-flex justify-content-between align-items-center">
                                <div class="trainer-profile d-flex align-items-center">
                                    <img src="~/assets/img/team/@course.Trainer.TrainerImage" class="img-fluid" alt="">
                                    <a class="trainer-link">@course.Trainer.FullName</a>
                                </div>
                                <div class="trainer-rank d-flex align-items-center">
                                    <i class="bi bi-person user-icon"></i>&nbsp;@course.BuyCount
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            }
        </div>

      </div>

    </section>

