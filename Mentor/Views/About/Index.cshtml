@model HomeVm
    <div class="page-title" data-aos="fade">
      <div class="heading">
        <div class="container">
          <div class="row d-flex justify-content-center text-center">
            <div class="col-lg-8">
              <h1>About Us<br></h1>
              <p class="mb-0">At Mentor, we believe in empowering learners with the knowledge they need to thrive. Our platform offers expert-led online courses in a wide range of fields — from technology and business to creative arts. With a mission to make quality education accessible to all, we connect passionate instructors with eager learners around the globe.</p>
            </div>
          </div>
        </div>
      </div>
      <nav class="breadcrumbs">
        <div class="container">
          <ol>
            <li><a href="index.html">Home</a></li>
            <li class="current">About Us<br></li>
          </ol>
        </div>
      </nav>
    </div>

    <section id="about-us" class="section about-us">

      <div class="container">

        <div class="row gy-4">

          <div class="col-lg-6 order-1 order-lg-2" data-aos="fade-up" data-aos-delay="100">
            <img src="assets/img/about-2.jpg" class="img-fluid" alt="">
          </div>

          <div class="col-lg-6 order-2 order-lg-1 content" data-aos="fade-up" data-aos-delay="200">
            <h3>Empowering Learners Through Expert Knowledge</h3>
            <p class="fst-italic">
              Mentor is designed to help you learn from the best. Our platform brings together skilled trainers and industry professionals to provide high-quality, affordable, and accessible education to everyone, anywhere.
            </p>
            <ul>
              <li><i class="bi bi-check-circle"></i> <span>Courses are designed to be practical and beginner-friendly, focusing on real-world skills.</span></li>
              <li><i class="bi bi-check-circle"></i> <span>Learn at your own pace with flexible scheduling and lifetime access.</span></li>
              <li><i class="bi bi-check-circle"></i> <span>Our instructors are vetted professionals with years of experience in their respective fields. You learn from the best.</span></li>
            </ul>
          </div>

        </div>

      </div>

    </section>
    <section id="counts" class="section counts light-background">

      <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="row gy-4">

            <div class="col-lg-4 col-md-6">
                <div class="stats-item text-center w-100 h-100">
                    <span data-purecounter-start="0" data-purecounter-end="@Model.Users.Count()" data-purecounter-duration="1" class="purecounter"></span>
                    <p>Students</p>
                </div>
            </div>

            <div class="col-lg-4 col-md-6">
                <div class="stats-item text-center w-100 h-100">
                    <span data-purecounter-start="0" data-purecounter-end="@Model.Courses.Count()" data-purecounter-duration="1" class="purecounter"></span>
                    <p>Courses</p>
                </div>
            </div>


            <div class="col-lg-4 col-md-6">
                <div class="stats-item text-center w-100 h-100">
                    <span data-purecounter-start="0" data-purecounter-end="@Model.Trainers.Count()" data-purecounter-duration="1" class="purecounter"></span>
                    <p>Trainers</p>
                </div>
            </div>

        </div>

      </div>

    </section>

    <section id="testimonials" class="testimonials section">

      <div class="container section-title" data-aos="fade-up">
        <h2>Testimonials</h2>
        <p>What are they saying</p>
      </div>

      <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="swiper init-swiper">
          <script type="application/json" class="swiper-config">
            {
              "loop": true,
              "speed": 600,
              "autoplay": {
                "delay": 5000
              },
              "slidesPerView": "auto",
              "pagination": {
                "el": ".swiper-pagination",
                "type": "bullets",
                "clickable": true
              },
              "breakpoints": {
                "320": {
                  "slidesPerView": 1,
                  "spaceBetween": 40
                },
                "1200": {
                  "slidesPerView": 2,
                  "spaceBetween": 20
                }
              }
            }
          </script>
          <div class="swiper-wrapper">

                @foreach (var cc in Model.CourseComments)
                {
                        <div class="swiper-slide">
                            <div class="testimonial-wrap">
                                <div class="testimonial-item">
                                    <h3>@cc.AppUser.FirstName @cc.AppUser.LastName</h3>
                                    <h4>@cc.AppUser.UserName</h4>

                                    <p>
                                        <i class="bi bi-quote quote-icon-left"></i>
                                        <span>@cc.Text</span>
                                        <i class="bi bi-quote quote-icon-right"></i>
                                    </p>
                                </div>
                            </div>
                        </div>
                }

          </div>
          <div class="swiper-pagination"></div>
        </div>

      </div>

    </section>